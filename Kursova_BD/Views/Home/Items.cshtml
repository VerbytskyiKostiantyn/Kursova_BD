@using Kursova_BD.Models.ViewModels

@model ItemsVM
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<div class="container py-4">
    <h2 class="text-center mb-4">@Model.CategoryName</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model.items)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <a onclick="showQuantityDialog(@item.Id, '@item.Name')" class="text-decoration-none text-dark card-link" style="cursor: pointer;">
                        <div class="card-img-wrapper" style="height: 200px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                            <img src="@item.ImagePath"
                                 class="card-img-top"
                                 alt="@item.Name"
                                 style="max-height: 100%; max-width: 100%; object-fit: contain;">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title mb-0">@item.Name @item.Price грн</h5>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <span class="btn btn-outline-primary w-100">
                                Купити
                            </span>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>


<script src="~/js/items.js" asp-append-version="true"></script>